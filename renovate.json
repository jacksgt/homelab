{
  "extends": [
    "config:recommended"
  ],
  // https://docs.renovatebot.com/configuration-templates/#commit-message
  "commitMessage": "{{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "matchFileNames": [
        "ansible/requirements.txt"
      ],
      "groupName": "ansible-python-dependencies"
    },
    {
      "matchFileNames": [
        "ansible/requirements.yml"
      ],
      "groupName": "ansible-galaxy-collections"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/hotio/**"
      ],
      "versioning": "regex:^(?<compatibility>.*)-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(\\.(?<build>\\d+))?$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "docker.io/bitnami/**",
        "docker.io/bitnamilegacy/**"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<compatibility>.+)(?<build>\\d+)-r(?<revision>\\d+))?$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/alexta69/metube",
        "ghcr.io/olivetin/olivetin"
      ],
      "versioning": "loose"
    }
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/values\\.yaml$/"
    ],
    "pinDigests": false
  }
}
